<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>FitnessServlet</servlet-name>
        <servlet-class>com.fitnessClient.FitnessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayInfo</servlet-name>
        <servlet-class>com.fitnessClient.DisplayInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalcBMI</servlet-name>
        <servlet-class>com.fitnessClient.CalcBMI</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetermineBodyFat</servlet-name>
        <servlet-class>com.fitnessClient.DetermineBodyFat</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FitnessServlet</servlet-name>
        <url-pattern>/FitnessServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayInfo</servlet-name>
        <url-pattern>/DisplayInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalcBMI</servlet-name>
        <url-pattern>/CalcBMI</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetermineBodyFat</servlet-name>
        <url-pattern>/DetermineBodyFat</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
